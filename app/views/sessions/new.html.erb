<% @title = "Sign in" %>

<div class="signinbox">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info">

      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
      </div>

      <div style="padding-top:30px" class="panel-body">

        <%= simple_form_for(:session, url: sessions_path) do |f| %>

          <%= f.input :email, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.input_field :email, placeholder: 'Email address', style:'width: 240px' %>
          <% end %>

          <%= f.input :password, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password, placeholder: 'Password', style:'width: 240px'%>
          <% end %>

          <%= f.submit "Sign in", class: "btn btn-block btn-primary" %>
        
        <% end %>


        <div style="border-top: 1px solid#888; padding-top:15px" >
            <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
        
      </div>  
         
    </div> 
</div>
