<% @title = "All users" %>
<div class="row">
  <div class="span9">
    <h3>All users</h3>

	  <section>
		<ul class="users">
			<% @users.each do |user| %>
				<li><%= link_to user.name, user %> 
				<% if current_user.admin? && !current_user?(user) %>
		    		| <%= link_to "delete", user, method: :delete,
		                                  data: { confirm: "You sure?" } %>
		  		<% end %>
		  		</li>
			<% end %>
		</ul>
	  </section>
	</div>
</div>