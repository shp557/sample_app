<% @title = "Update profile" %>

<div class="signinbox">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info">

      <div class="panel-heading">
        <div class="panel-title">Update profile</div>
      </div>

      <div style="padding-top:30px" class="panel-body">

        <%= simple_form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.input :name, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-tag"></i></span>
            <%= f.input_field :name, placeholder: 'Name', style:'width: 240px' %>
          <% end %>

          <%= f.input :email, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-user"></i></span>
            <%= f.input_field :email, placeholder: 'Email address', style:'width: 240px' %>
          <% end %>

          <%= f.input :password, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password, placeholder: 'Password', style:'width: 240px' %>
          <% end %>

          <%= f.input :password_confirmation, :wrapper => :prepend, :label => false do %>
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= f.input_field :password_confirmation, placeholder: 'Confirm password', style:'width: 240px'%>
          <% end %>

          <%= f.submit "Save changes", class: "btn btn-block btn-primary " %>

        <% end %>

      </div>
    </div>
  </div>
</div>