<% @title = "Event" %>
<div class="row">
  <div class="span9">
    <h3><%= @event.tag %></h3>
    <ol class="events">
      <span class="content">
        <li>Location: <%= @event.location %></li>
        <li>Start time: <%= @event.start_time.to_s(:time) %></li>
        <li>End time: <%= @event.end_time.to_s(:time) %></li>
        <li>Description: <%= @event.content %></li>
      </span>
    </ol>  
  </div>
</div>