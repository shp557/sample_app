<% @title = "Event details" %>
<div class="row">
  <div class="span9">
    <h4 style="padding-bottom:10px"><%= @event.tag %></h4>
    <ul class="events">
      <span class="content">
        <strong>Date</strong>
          <li><%= @event.start_date.strftime("%A, %b %e") %></li>
        <strong>Time</strong>
          <li><%= @event.start_time.strftime("%l:%M %P") %>-<%= @event.end_time.strftime("%l:%M %P") %></li>
        <strong>Location</strong>
          <li><%= @event.location %></li>
        <strong>Description</strong>
          <li><%= simple_format h @event.content %></li>
      </span>
    </ul>  
    <p id="post">Posted by <%= link_to User.find(@event.user_id).name, user_path(User.find(@event.user_id)) %></p>
  </div>
</div>