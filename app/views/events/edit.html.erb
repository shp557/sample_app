<% @title = "Edit event" %>
<div class="row">
<aside class="span4">
  <section>
    <h3>Update your event</h3>
  </section>
  <section>

    <%= form_for(@event) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :tag, "Listing" %>
    <%= f.text_field :tag %>

    <%= f.label :start_date, "Date" %>
    <%= f.text_field :start_date, id: "datepicker", value: ''%>

    <%= f.label :start_time, "Start time" %>
    <%= f.text_field :start_time, id: "start_time", value: '' %>

    <%= f.label :end_time, "End time" %>
    <%= f.text_field :end_time, id: "end_time", value: '' %>

    <%= f.label :content, "Description" %>
    <%= f.text_area :content %>

    <%= f.label :location, "Location" %>
    <%= f.text_field :location %>

    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

    <% end %> 
  </section>
</aside>
</div>

<script>

  $('#datepicker').datepicker({
    autoclose: true,
    format: 'yyyy-mm-dd',
    startDate: '0'
  });

  $('#start_time').timepicker({
    scrollDefaultNow: true,
    timeFormat: 'g:ia'
  });

  $('#start_time').on('changeTime', function() {
    var strTime = $(this).val();
    $('#end_time').timepicker({ 'minTime': strTime});
  });

  $('#end_time').timepicker({
    timeFormat: 'g:ia',
    scrollDefaultNow: true
  });

  $('#f').find("input[start")
</script>
